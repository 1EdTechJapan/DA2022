<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <nav class="navbar navbar-dark bg-secondary">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">SAMPLE</span>
        </div>
    </nav>

    <header class="mt-3">
        <div class="container">
            <h2 class="text-center">OneRoster import sample</h2>
        </div>
    </header>

    <main class="p-5">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-6">
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="inputFile" accept=".zip">
                        <button class="btn btn-outline-success" type="button" id="btn-import">Import</button>
                    </div>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-lg-8" id="result-area">

                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="container"></div>
    </footer>
        
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModal" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-danger text-white">
              <h5 class="modal-title" id="exampleModalLabel">エラー</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p id="errorModalMsg"></p>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>